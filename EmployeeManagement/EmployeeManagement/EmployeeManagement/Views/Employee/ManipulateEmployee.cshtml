@using EmployeeManagement.Models;
@model EmployeeManagement.Models.EmpInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ManipulateEmployee</title>
     <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <link href="~/Script/EmployeeStyle.css" rel="stylesheet" />
    <link href="~/Script/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Script/jquery-3.1.1.js"></script>
    <script src="~/Script/jquery-3.1.1.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $("#btnGet").click(function () {
                $.ajax({
                    type: 'POST',
                    dataType: 'json',
                    url: '/Employee/ManipulateEmployee',
                    data: {
                         
                        Emp_Code: $("#code").val(),
                        Emp_Name: $("#name").val(),
                        Emp_Email: $("#email").val(),
                        Emp_Phone: $("#phone").val(),
                        Emp_Address: $("#address").val(),
                        Emp_Age: $("#age").val(),
                        Emp_Gender: $("#gender").val(),
                        Emp_salary: $("#salary").val(),
                        Emp_Department: $("#department").val(),
                        Emp_Designation: $("#designation").val()
                    },
                    success: function (Data) {
                        
                        alert(Data);
                       
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {

                    }
                });

            });
        });
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            
            <div class="col-lg-6"> 
                <div class="container" >
                    <div class="row">
                        <div class="col-lg-3">Enter Employee  Code:</div>
                        <div class="col-lg-3"><input type="text" placeholder="Enter Employee  Code" id="code" /></div>
                    </div><br />
                     <div class="row">
                        <div class="col-lg-3">Enter Employee  Name:</div>
                        <div class="col-lg-3"><input type="text" placeholder="Enter Employee  Name" id="name" /></div>
                    </div><br />
                     <div class="row">
                        <div class="col-lg-3">Enter Employee  Email:</div>
                        <div class="col-lg-3"><input type="text" placeholder="Enter Employee  Email" id="email" /></div>
                    </div><br />
                     <div class="row">
                        <div class="col-lg-3">Enter Employee  Phone:</div>
                        <div class="col-lg-3"><input type="text" placeholder="Enter Employee  Phone" id="phone" /></div>
                    </div><br />
                     <div class="row">
                        <div class="col-lg-3">Enter Employee  Address:</div>
                        <div class="col-lg-3"><input type="text" placeholder="Enter Employee  Address" id="address" /></div>
                    </div><br />
                     <div class="row">
                        <div class="col-lg-3">Enter Employee  Age:</div>
                        <div class="col-lg-3"><input type="text" placeholder="Enter Employee  Age" id="age" /></div>
                    </div><br />
                     <div class="row">
                        <div class="col-lg-3">Enter Employee  Gender:</div>
                        <div class="col-lg-3"><input type="text" placeholder="Enter Employee  Gender" id="gender" /></div>
                    </div><br />
                     <div class="row">
                        <div class="col-lg-3">Enter Employee  Salary:</div>
                        <div class="col-lg-3"><input type="text" placeholder="Enter Employee  Salary" id="salary" /></div>
                    </div><br />
                     <div class="row">
                        <div class="col-lg-3">Enter Employee  Department:</div>
                        <div class="col-lg-3"><input type="text" placeholder="Enter Employee  Department" id="department" /></div>
                    </div><br />
                    <div class="row">
                        <div class="col-lg-3">Enter Employee Designation:</div>
                        <div class="col-lg-3"><input type="text" placeholder="Enter Employee Designation" id="designation" /></div>
                    </div><br />
                </div>
            </div>
           </div> 
       <div class="row">
            <div class="col-lg-3 text-center">
               <h5> @Html.ActionLink("Home","SelectEmployee")</h5>
            </div> 
            <div class="col-lg-2"> 
  
        <input type="submit" value="Insert Employee" id="btnGet" class="btn btn-info btn-block" style="margin-left:15px;"/>
    </div></div>
 </div>
</body>
</html>
